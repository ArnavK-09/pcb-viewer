{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "packagePatterns": [
        "*"
      ],
      "excludePackagePatterns": [
        "@tscircuit/*",
        "circuit-json",
        "circuit-json-to-connectivity-map"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}